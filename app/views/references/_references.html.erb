<div class='references'>
  <% if @references.any? %>
  <% @references.each do |reference| %>
  <hr>
  <h4> <%= reference.referee %> </h4>
  <h5> <%= reference.referee_info %> </h5>
  <p>
    <%= reference.body %>
  </p>
  <% end %>
  <% else %>
  <p>
    No references right now, check back soon!
  </p>
  <% end %>
</div>
<%= will_paginate @references %>

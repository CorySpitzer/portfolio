#new-reference
  / Hidden in CSS
  = link_to 'Add Reference', new_reference_path(@reference), id: 'new-reference-link', remote: true
#new-reference-form
%h3 References:
#references
.references
  - if @references.any?
    - @references.each do |reference|
      %hr/
      %h4
        = reference.referee.html_safe
      %em
        = reference.referee_info.html_safe
      .well
        = reference.body.html_safe
  - else
    %p
      No references right now, check back soon!
= will_paginate @references
